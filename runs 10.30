name: Daily Build and Test

on:
  schedule:
    # Runs every day at 10:30 AM IST (convert to UTC: 10:30 IST = 05:00 UTC)
    - cron: '0 5 * * *'
  workflow_dispatch: # allows manual trigger as well

jobs:
  build_and_test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Node.js (example)
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm install

      - name: Run tests
        run: npm test

      - name: Build project
        run: npm run build
