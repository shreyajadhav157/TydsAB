name: Print Current Date and Time

on:
  schedule:
    # Runs every 15 minutes
    - cron: "*/15 * * * *"
  workflow_dispatch:  # allows manual trigger from GitHub UI

jobs:
  print_time:
    runs-on: ubuntu-latest
    steps:
      - name: Print current date and time
        run: |
          echo "Current Date and Time:"
          date
